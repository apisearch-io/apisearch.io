            <div class="flex flex-wrap lg:flex-nowrap">
                <div class="w-full lg:w-1/2">
                    <div class="py-6 lg:pr-32">
                        <div class="mb-4">
                            <h2 class="text-4xl mt-3 font-bold font-heading">{{ t.start.title }}</h2>
                        </div>
                        <div class="flex items-start py-4">
