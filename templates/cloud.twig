            {% include "blocks/nav.twig" %}

            <div class="pt-12 pb-16 text-center">
                <div class="max-w-lg mx-auto mb-8">
                    <h2 class="text-3xl md:text-4xl mb-4 font-bold font-heading">
                        {{ t.header.title|raw }}
                    </h2>
                    <p class="text-blueGray-400 leading-relaxed">{{ t.header.subtitle|raw }}</p>
