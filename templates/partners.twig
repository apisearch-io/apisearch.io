                    <div class="max-w-md">
                        <h2 class="mb-4 text-3xl md:text-4xl font-bold font-heading">{{ t.being_commercial.title }}</h2>
                        <p class="mb-6 leading-loose text-blueGray-400">{{ t.being_commercial.text }}</p>
