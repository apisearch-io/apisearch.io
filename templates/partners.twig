                                <p class="text-xl">{{ t.fastly.title }}</p>
                                <p class="text-green-600">{{ t.fastly.subtitle }}</p>
                            </div>
                        </div>
                        <p class="leading-loose text-blueGray-400 mb-5">{{ t.fastly.text }}</p>
