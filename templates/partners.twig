                    <div class="mb-12 lg:mb-0 pb-12 lg:pb-0 border-b lg:border-b-0">
                        <h2 class="mb-4 text-3xl lg:text-4xl font-bold font-heading">{{ t.being_reseller.title }}</h2>
                        <p class="mb-8 leading-loose text-blueGray-400">{{ t.being_reseller.text }}</p>
