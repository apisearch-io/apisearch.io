<section class="pt-24 pb-32 overflow-hidden {{ black ? 'as-background-black' : '' }}" id="contact">
    <div class="container mx-auto px-4">
        <div class="mb-20 md:mb-40">
            <h3 class="mb-6 mx-auto font-heading font-thin text-center text-5xl sm:text-6xl md:text-7xl {{ black ? 'text-white' : 'text-gray-900'}}">{{ t.contact.title }}</h3>
            <p class="{{ black ? 'text-white' : 'text-black'}} mb-2 text-lg">{{ t.contact.text_1 }}</p>
            <p class="{{ black ? 'text-white' : 'text-black'}} text-lg">{{ t.contact.text_2 }}</p>
        </div>
        <div class="flex flex-wrap -m-6">
            <div class="w-full md:w-1/2 p-6">
                <div class="md:max-w-xs mx-auto">
                    <a href="email: {{ config.support_email }}" class="font-heading font-medium text-2xl as-secondary-color">{{ config.support_email }}</a>
                </div>
            </div>
        </div>
    </div>
</section>
