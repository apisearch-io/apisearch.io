<section class="py-20 xl:bg-contain bg-top bg-no-repeat bg-blueGray-50" id="prices">
    <div class="container px-4 mx-auto">
        <div class="text-center mb-16">
            <h2 class="max-w-xl mx-auto mb-4 text-4xl font-bold font-heading">
                {{ t.prices.title|raw }}
            </h2>
            <p class="max-w-xl mx-auto text-lg text-blueGray-400">{{ t.prices.description_1|raw }}</p>
            <p class="max-w-xl mx-auto text-lg text-blueGray-400 mt-3">{{ t.prices.description_2|raw }}</p>
