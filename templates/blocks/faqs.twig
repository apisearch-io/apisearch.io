<section class="pt-24 pb-32 bg-gradient-gray2 overflow-hidden">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h3 class="text-5xl sm:text-6xl md:text-7xl font-100">{{ t.common.got_questions.title }}</h3>
            <p class="max-w-xl mx-auto text-lg">{{ t.common.got_questions.subtitle }}</p>
        </div>
        <div class="flex flex-wrap -m-6 mb-24">
            {% for qa in t.qa %}
                <div class="w-full  md:w-1/2 p-6">
                    <div class="md:max-w-xl">
                        <h4 class="mb-4 text-2xl font-thin">{{ qa.q }}</h4>
                        <p class="as-black">{{ qa.a|raw }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
